<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://www.oracle.com/webfolder/technetwork/jsc/xml/ns/javaee/web-facesconfig_1_2.xsd"
        version="1.2">


    <!--
        Templating for JavaServer Faces Technology default JavaServer Faces
	configuration file.
    -->

    <application>
        <!-- -->
	<view-handler>org.glassfish.jsftemplating.layout.LayoutViewHandler</view-handler>
	<variable-resolver>org.glassfish.jsftemplating.el.PageSessionResolver</variable-resolver>
        <!-- -->
        <locale-config>
          <default-locale>en</default-locale>
        </locale-config>
    </application>

    <component>
	<component-type>org.glassfish.jsftemplating.EventComponent</component-type>
	<component-class>org.glassfish.jsftemplating.component.EventComponent</component-class>
    </component>
    <component>
	<component-type>org.glassfish.jsftemplating.If</component-type>
	<component-class>org.glassfish.jsftemplating.component.If</component-class>
    </component>
    <component>
	<component-type>org.glassfish.jsftemplating.While</component-type>
	<component-class>org.glassfish.jsftemplating.component.While</component-class>
    </component>
    <component>
	<component-type>org.glassfish.jsftemplating.ForEach</component-type>
	<component-class>org.glassfish.jsftemplating.component.ForEach</component-class>
    </component>
    <component>
	<component-type>org.glassfish.jsftemplating.AjaxRequest</component-type>
	<component-class>org.glassfish.jsftemplating.component.AjaxRequest</component-class>
    </component>
    <component>
	<component-type>org.glassfish.jsftemplating.StaticText</component-type>
	<component-class>org.glassfish.jsftemplating.component.StaticText</component-class>
    </component>

    <render-kit>
	<renderer>
	    <component-family>org.glassfish.jsftemplating.EventComponent</component-family>
	    <renderer-type>org.glassfish.jsftemplating.EventComponent</renderer-type>
	    <renderer-class>org.glassfish.jsftemplating.renderer.TemplateRenderer</renderer-class>
	</renderer>
	<renderer>
	    <component-family>org.glassfish.jsftemplating.If</component-family>
	    <renderer-type>org.glassfish.jsftemplating.If</renderer-type>
	    <renderer-class>org.glassfish.jsftemplating.renderer.TemplateRenderer</renderer-class>
	</renderer>
	<renderer>
	    <component-family>org.glassfish.jsftemplating.While</component-family>
	    <renderer-type>org.glassfish.jsftemplating.While</renderer-type>
	    <renderer-class>org.glassfish.jsftemplating.renderer.TemplateRenderer</renderer-class>
	</renderer>
	<renderer>
	    <component-family>org.glassfish.jsftemplating.ForEach</component-family>
	    <renderer-type>org.glassfish.jsftemplating.ForEach</renderer-type>
	    <renderer-class>org.glassfish.jsftemplating.renderer.TemplateRenderer</renderer-class>
	</renderer>
	<renderer>
	    <component-family>org.glassfish.jsftemplating.AjaxRequest</component-family>
	    <renderer-type>org.glassfish.jsftemplating.AjaxRequest</renderer-type>
	    <renderer-class>org.glassfish.jsftemplating.renderer.TemplateRenderer</renderer-class>
	</renderer>
	<renderer>
	    <component-family>org.glassfish.jsftemplating.StaticText</component-family>
	    <renderer-type>org.glassfish.jsftemplating.StaticText</renderer-type>
	    <renderer-class>org.glassfish.jsftemplating.renderer.TemplateRenderer</renderer-class>
	</renderer>
    </render-kit>

    <managed-bean>
        <description>
	    The "invokeCommandHandlers" ActionListener in this managed bean
	    capable of dispatching "command" handlers.
	</description>
        <managed-bean-name>lfCommand</managed-bean-name>
        <managed-bean-class>org.glassfish.jsftemplating.layout.event.CommandActionListener</managed-bean-class>
    
        <managed-bean-scope>application</managed-bean-scope></managed-bean>

</faces-config>
